<!-- views/listings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Listings</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Here's all the Listings</h1>
    <a href="/listings/new">Add a New Listing</a>
    
    <ul>
      <% if (listings && Array.isArray(listings)) { %>
        <% listings.forEach(listing => { %>
          <li>
            A listing at <%= listing.city %> 
            owned by <%= listing.owner && listing.owner.username ? listing.owner.username : 'Unknown Owner' %>
            <a href="/listings/<%= listing._id %>">View more details.</a>
          </li>
        <% }) %>
      <% } else { %>
        <li>No listings found.</li>
      <% } %>
    </ul>
  </body>
</html>
